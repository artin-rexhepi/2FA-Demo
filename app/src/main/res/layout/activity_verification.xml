<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E">

    <!-- Container kryesor për mbajtjen e elementeve në mes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Logo e Universitetit -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo_up"
        android:layout_gravity="center"
        android:contentDescription="University Logo" />

        <!-- Tekst për Titullin -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP VERIFICATION"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"/>

        <!-- Tekst për udhëzime shtesë -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter the OTP code sent to your email."
            android:textSize="16sp"
            android:textColor="#CCCCCC"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <!-- Fusha për vendosjen e OTP -->
        <EditText
            android:id="@+id/otp_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter OTP code"
            android:backgroundTint="#B3B3B3"
            android:layout_marginTop="16dp"
            android:padding="14dp"
            android:layout_marginHorizontal="32dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:gravity="center"/>

        <!-- Butoni për verifikim -->
        <Button
            android:id="@+id/verify_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:backgroundTint="#B71C1C"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="32dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
